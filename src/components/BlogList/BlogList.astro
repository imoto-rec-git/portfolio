---
import { getBlogs } from "../../library/microcms";
import BlogListItem from "../BlogListItem/BlogListItem.astro";
import Container from "../Container/Container.astro";
import styles from "./BlogList.module.scss"

type BlogContent = {
	id: string;
	title: string;
  publishedAt: string;
};

const response = await getBlogs({ fields: ["id", "title", "publishedAt"] });
---

<Container>
  <ul class={styles.list}>
      {
        response.contents.map((content: BlogContent) => (
          <BlogListItem blog={content} />
        ))
      }
  </ul>
</Container>