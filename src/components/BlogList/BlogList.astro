---
import { getBlogs, type Blog } from "../../library/microcms";
import BlogListItem from "../BlogListItem/BlogListItem.astro";
import styles from "./BlogList.module.scss"

const response = await getBlogs({ fields: ["id","publishedAt", "title", "content"] });
---

<ul class={styles.list}>
    {
      response.contents.map((blog: Blog) => (
        <BlogListItem blog={blog} />
      ))
    }
</ul>