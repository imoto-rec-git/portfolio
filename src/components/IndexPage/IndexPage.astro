                </a>
            ) : (
                <Image src={project.image} alt={project.alt} width={project.width} height={project.height} />
            )}
            <div class={styles.details}>
                <h3 class={styles.title}>
                    {project.link ? (
                        <a href={project.link} target="_blank" rel="noopener noreferrer" class={styles.link}>
                            {project.name}
                        </a>
                    ) : (
                        project.name
                    )}
                </h3>
                <HtmlContent html={project.description} />
                {project.overview && <h3 class={styles.overviewTitle}>業務内容</h3>}
                {project.overview && (
                    <ul class={styles.overviewList}>
                        {project.overview.map((item) => (
                            <li>
                                <strong>{item.summary}：</strong>{item.detail}
                            </li>
                        ))}
                    </ul>
                )}
                <h3 class={styles.overviewTitle}>技術スタック</h3>
                <dl class={styles.list}>
                    {project.details.map((detail) => (
                        <>
                            <dt class={styles.summary}>{detail.title}</dt>
                            <dd class={styles.feature}>{detail.content}</dd>
                        </>
                    ))}
                </dl>
            </div>
        </div>
    ))}
</div>